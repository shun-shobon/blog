{
  "extends": "@tsconfig/next-strictest/tsconfig",
  "compilerOptions": {
    // TODO: Remove this after merging https://github.com/tsconfig/bases/pull/161
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
